{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"lib": ["es6"],
		"module": "esnext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"noEmitOnError": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"pretty": true,
		"sourceMap": true,
		"strict": true,
		"target": "es2019"
	},
	"include": ["src/**/*", "types/**/*"],
	"exclude": ["dist", "node_modules"]
}
